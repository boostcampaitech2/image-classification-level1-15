{
    "name": "AgeClassificationEfficientnet",
    "n_gpu": 1,
    "arch": {
        "type": "AgeClassifier",
        "args": {
            "pre_name": "efficientnet_b3"
        }
    },
    "data_loader": {
        "type": "MaskImageDataLoader",
        "args": {
            "data_dir": "data/input/data/",
            "batch_size": 64,
            "shuffle": true,
            "validation_split": 0.2,
            "num_workers": 2,
            "csv_path": "data/train_csv_with_multi_labels.csv"
        }
    },
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 0.0005,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "cross_entropy_loss",
    "metrics": [
        "accuracy"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 3,
        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        "monitor": "min val_loss",
        "early_stop": 2,
        "tensorboard": true
    }
}