{
    "name": "GenderClf_adamw_10p_b1",
    "n_gpu": 1,
    "arch": {
        "type": "Model",
        "args": {
            "num_classes": 2,
            "label_name": "gender",
            "pretrained_model": "efficientnet_b1"
        }
    },
    "data_loader": {
        "type": "MaskImageDataLoader",
        "args": {
            "data_dir": "data/input/data/",
            "batch_size": 64,
            "shuffle": true,
            "validation_split": 0.0,
            "num_workers": 0,
            "csv_path": "data/splitted_train_csv_10.csv"
        }
    },
    "valid_data_loader": {
        "type": "MaskImageValidDataLoader",
        "args": {
            "data_dir": "data/input/data/",
            "batch_size": 64,
            "shuffle": false,
            "validation_split": 0.0,
            "num_workers": 0,
            "csv_path": "data/splitted_valid_csv_10.csv"
        }
    },
    "optimizer": {
        "type": "AdamW",
        "args": {
            "lr": 0.005,
            "weight_decay": 5e-4,
            "amsgrad": true
        }
    },
    "loss": "cross_entropy_loss",
    "metrics": [
        "accuracy",
        "f1"
    ],
    "lr_scheduler": {
        "type": "OneCycleLR",
        "args": {
            "max_lr": 0.01,
            "steps_per_epoch": 10,
            "epochs": 15,
            "pct_start": 0.2
        }
    },
    "trainer": {
        "epochs": 15,
        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        "monitor": "min val_loss",
        "early_stop": 5,
        "tensorboard": true
    }
}