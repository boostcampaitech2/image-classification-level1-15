{
    "name": "EvalRegTTA",
    "n_gpu": 1,
    "save_directory_name": {
        "gender": "GenderRegnetTTA",
        "age": "AgeRegnetTTA",
        "mask": "MaskRegnetTTA"
    },
    "arch": {
        "type1": "Model",
        "args1": {
            "num_classes": 2,
            "label_name": "gender",
            "pretrained_model": "regnety_006"
        },
        "type2": "Model",
        "args2": {
            "num_classes": 3,
            "label_name": "age",
            "pretrained_model": "regnety_006"
        },
        "type3": "Model",
        "args3": {
            "num_classes": 3,
            "label_name": "mask",
            "pretrained_model": "regnety_006"
        }
    },
    "data_loader": {
        "type": "MaskImageDataLoader",
        "args": {
            "data_dir": "data/input/data/",
            "batch_size": 64,
            "shuffle": true,
            "validation_split": 0.2,
            "num_workers": 2,
            "csv_path": "data/train_csv_with_multi_labels.csv"
        }
    },
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 0.0005,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "cross_entropy_loss",
    "metrics": [
        "accuracy"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 3,
        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        "monitor": "min val_loss",
        "early_stop": 2,
        "tensorboard": true
    }
}