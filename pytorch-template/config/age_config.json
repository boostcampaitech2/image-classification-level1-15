{
    "name": "SmoothTestingModel",
    "n_gpu": 1,
    "arch": {
        "type": "SmoothTestingModel",
        "args": {
            "num_classes": 3,
            "pretrained_model": "resnet50"
        }
    },
    "data_loader": {
        "type": "AgeSmoothingDataLoader",
        "args": {
            "data_dir": "data/input/data/",
            "batch_size": 64,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 2,
            "csv_path": "data/train_csv_with_multi_labels.csv"
        }
    },
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "cross_entropy_loss_age_smooth",
    "metrics": [
        "accuracy_multi_label",
        "f1_multi_label"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 10,
        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        "monitor": "min val_loss",
        "early_stop": 2,
        "tensorboard": true
    }
}