{
    "name": "MaskImageClassfication",
    "n_gpu": 1,
    "arch": {
        "type": "MnasNet",
        "args": {}
    },
    "data_loader": {
        "type": "MaskImageDataLoader",
        "args": {
            "data_dir": "data/input/data/train/images/",
            "batch_size": 32,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 2,
            "csv_path": "data/train_csv_with_labels.csv"
        }
    },
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "cross_entropy_loss",
    "metrics": [
        "accuracy",
        "top_k_acc"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 10,
        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        "monitor": "min val_loss",
        "early_stop": 10,
        "tensorboard": true
    }
}